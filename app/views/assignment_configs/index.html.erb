<h1>Listing assignment_configs</h1>

<table>
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Input</th>
      <th>Output</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @assignment_configs.each_with_index do |assignment_config, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= assignment_config.input %></td>
        <td><%= simple_format assignment_config.output %></td>
        <td><%= link_to 'Show', course_assignment_assignment_config_path(@course, @assignment, assignment_config) %></td>
        <td><%= link_to 'Edit', edit_course_assignment_assignment_config_path(@course, @assignment, assignment_config) %></td>
        <td><%= link_to 'Destroy', course_assignment_assignment_config_path(@course, @assignment, assignment_config), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= render 'form' %>

<% content_for :sidebar do %>
  <%= render 'sidebar' %>  
<% end %>
