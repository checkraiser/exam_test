<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>        
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= form_tag("/admin/users/import_teachers", :multipart => true) do %>  
 
  <div class="field">
    Nhập danh sách giảng viên theo lô:
    <input type="file" name="teachers" />
  </div>
  
  <div class="actions">
    <input type="submit" value="Submit" />
  </div>
<% end %>

<%= form_tag("/admin/users/import_students", :multipart => true) do %>  
 
  <div class="field">
    Nhập danh sách sinh viên theo lô:
    <input type="file" name="students" />
  </div>
  
  <div class="actions">
    <input type="submit" value="Submit" />
  </div>
<% end %>

