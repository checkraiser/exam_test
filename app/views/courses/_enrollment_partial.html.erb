<div class="row">
	<div class="col-md-6">
<h3>Teachers:</h3>
<% if @course.enrollments.teacher.count > 0 %>
	<ul>
		<% @course.enrollments.teacher.each do |en| %>
			<li><%= link_to en.user.email, [@course, en] %>  | <%= link_to 'Delete', [@course, en], method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger' %></li>
		<% end %>
	</ul>
<% end %>
</div>
<div class="col-md-6">
<h3>Students:</h3>
<% if @course.enrollments.student.count > 0 %>
	<ul>
		<% @course.enrollments.student.each do |en| %>
			<li><%= link_to en.user.email, [@course, en] %> | <%= link_to 'Delete', [@course, en], method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger' %> </li>
		<% end %>
	</ul>
<% end %>
</div>
</div>
<div class="row">
	<%= render 'enrollments/form' %>
</div>