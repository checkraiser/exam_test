<h1>Listing assignments</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Title</th>
      <th>Content</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.course_id %></td>
        <td><%= assignment.title %></td>
        <td><%= assignment.content %></td>
        <td><%= assignment.description %></td>
        <td><%= link_to 'Show', [@course, assignment] %></td>
        <% if can? :manage, @course %>
        <td><%= link_to 'Edit', edit_course_assignment_path(@course, assignment) %></td>
        <td><%= link_to 'Destroy', [@course, assignment], method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :manage, @course %>
<%= link_to 'New Assignment', new_course_assignment_path(@course) %>
<% end %>
<%= link_to 'Back to course', course_path(@course) %>
