<h1>Listing enrollments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.user_id %></td>
        <td><%= enrollment.course_id %></td>
        <td><%= enrollment.role %></td>
        <td><%= link_to 'Show', [@course, enrollment] %></td>
        <td><%= link_to 'Edit', edit_course_enrollment_path(@course, enrollment) %></td>
        <td><%= link_to 'Destroy', [@course, enrollment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enrollment', new_course_enrollment_path(@course) %> |
